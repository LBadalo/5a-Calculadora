
@{
    ViewBag.Title = "Index";
}


<h2>A minha calculadora </h2>
@*      devinir o formulário      *@

<style>
    .btn {
        width: 40px;
        height: 40px;
        background-color: lightgrey;
    }
    .colspan {
        height: 40px;
    }
    input[type=submit] {
        width: 100%;
        height: 100%;
    }

</style>

@using (Html.BeginForm())
{
    <div>

        <table>
            <tr>
                <td colspan="5"><input type="text" name="visor" value="@ViewBag.Ecra" class="form-control" readonly /></td>
            </tr>
            <tr>
                <td><input type="submit" value="7" name="bt" class="btn" /></td>
                <td><input type="submit" value="8" name="bt" class="btn" /></td>
                <td><input type="submit" value="9" name="bt" class="btn" /></td>
                <td><input type="submit" value=":" name="bt" class="btn" /></td>
                <td><input type="submit" value="+/-" name="bt" class="btn" /></td>
            </tr>
            <tr>
                <td><input type="submit" value="4" name="bt" class="btn" /></td>
                <td><input type="submit" value="5" name="bt" class="btn" /></td>
                <td><input type="submit" value="6" name="bt" class="btn" /></td>
                <td><input type="submit" value="x" name="bt" class="btn" /></td>
                <td><input type="submit" value="C" name="bt" class="btn" style="background-color:crimson" /></td>
            </tr>
            <tr>
                <td><input type="submit" value="1" name="bt" class="btn" /></td>
                <td><input type="submit" value="2" name="bt" class="btn" /></td>
                <td><input type="submit" value="3" name="bt" class="btn" /></td>
                <td><input type="submit" value="-" name="bt" class="btn" /></td>
                <td rowspan="2"><input type="submit" value="=" name="bt" class="btn" style="height: 70px;" /></td>
            </tr>
            <tr>
                <td colspan="2"><input type="submit" value="0" name="bt" class="btn" /></td>
                <td><input type="submit" value="," name="bt" class="btn " /></td>
                <td><input type="submit" value="+" name="bt" class="btn " /></td>
            </tr>
        </table>
    </div>

}

